<div class="review-banner padding-section" id="eview-section">
    <div class="vertical-center horizontal-center">
        <img src="<%= lib.lang.en.softwares[urlValue].review_image %>" alt="Review" class="review-image">
    </div>
    <div class="review-positioning"> 
        <div>
            <img src="/images/softwares-images/quotation.png" alt="quotation" class="quotation"/>
            <p class="review-hero-title text-start">
                <%= lib.lang.en.softwares[urlValue].review_quote %>
            </p>
            <p class="review-hero-description">
            <span class="description-bold">
                <%= lib.lang.en.softwares[urlValue].reviewer_name %>
            </span>
            <br />
                <%= lib.lang.en.softwares[urlValue].reviewer_role %>
            </p>
            <button class="review-button" onclick=scrollToContactUs()>Contact Us</button>
        </div>
    </div>     
</div>